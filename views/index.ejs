  <body>
       
     

    <div id="hero-image">
       <% include partials/nav.ejs %>
        <h1 id="hero-title"><%= title %></h1>
        <h1 id="hero-title2"><%= title2 %></h1>
        <h1 id="hero-title3"><%= title3 %></h1>
    </div>

    <div class="poster-info-overlay">
    <h1><%= title4 %></h1>
    </div>
    <div class="text">
     <% for (var i = 0; i < about.length; i++){%>
    <p><%= about[i].description %></p>
    </div>
    <% } %>
     <div id="posters-wrapper" class="content-padding clearfix">

      <%  for (var i = 0; i < anime.length; i++) { %>
        <div class="poster">
          <a href="/anime/<%= anime[i].episode_number %>">
        <img src="/images/<%= anime[i].poster %> " class="img-responsive" alt="">
      </a>
        <div class="poster-info-overlay">
          <h2><%= anime[i].title %></h2>
          <p><%= anime[i].sub_description %></p>
          <a href="/anime/<%= anime[i].episode_number %>">
          <button type="submit" class="btn btn-outline-secondary btn-lg" formaction="/top"><p>Read more<i class="fas fa-angle-right"></i></p></button>
        </a>
        </div>
    
      </div> 
        <% } %>


        <div>
          <form action="/action_page.php">
            <div class="container">
              <h1>Register</h1>
              <p>Please fill in this form to create an account.</p>
              <hr>
          
              <label for="email"><b>Email</b></label>
              <input type="text" placeholder="Enter Email" name="email" required>
          
              <label for="psw"><b>Password</b></label>
              <input type="password" placeholder="Enter Password" name="psw" required>
          
              <label for="psw-repeat"><b>Repeat Password</b></label>
              <input type="password" placeholder="Repeat Password" name="psw-repeat" required>
              <hr>
              <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>
          
              <button type="submit" class="registerbtn">Register</button>
            </div>
            
            <div class="container signin">
              <p>Already have an account? <a href="#">Sign in</a>.</p>
            </div>
          </form>
        </div>
      
     </div>
    
 
    <% include partials/scripts.ejs %>
